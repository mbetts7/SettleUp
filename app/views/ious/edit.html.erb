<div class="large-6 columns">
  <h1>Edit your IOU</h1>
    <%= form_for @iou do |f| %>
      <%= f.label "Amount" %>
      <%= f.text_field :balance  %>
      
      <%= f.label "What's the IOU for?" %>
      <%= f.text_field :name  %>
      
      <%= f.label "Due date" %>
      <%= f.text_field :due_date %>
      
      <%= f.label "Paid or unpaid?" %>
      <%= f.select :status, options_for_select([['paid', 'paid'],['unpaid', 'unpaid']]) %>
      
      <%= f.label "Payable or Receivable?" %>
      <%= f.select :rec_pay, options_for_select([['payable', 'payable'],['receivable', 'receivable']]) %>
      
      <%= f.submit "Update IOU", class: "button radius" %>
    <% end %>
</div>