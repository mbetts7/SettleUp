<###############%= render 'nested' %>


<%= f.fields_for :contact do |builder| %>
<%= builder.label "Create new contact" %>
  <fieldset>
    <%= builder.label "First name" %>
    <%= builder.text_field :first_name %>
    <%= builder.label "Last name" %>
    <%= builder.text_field :last_name %>
    <%= builder.label "Email" %>
    <%= builder.text_field :email %>
    <%= builder.label "Phone" %>
    <%= builder.text_field :phone %>
    <%= builder.hidden_field :user_id, :value => current_user.id %>
  </fieldset>
<% end %>