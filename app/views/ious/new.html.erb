<%= form_for @iou do |f| %>
  <%= f.label "How much is owed?" %>
  <%= f.text_field :balance  %>
  <%= f.label :name %>
  <%= f.text_field :name  %>
  <%= f.label "By default this IOU is open, mark it closed when it is paid" %>
  <%= f.text_field :status  %>
  <%= f.label "Due date" %>
  <%= f.text_field :due_date  %>
  <%= f.label "Payable or Receivable?" %>
  <%= f.text_field :rec_pay  %>
  
    <%= f.fields_for :contact do |builder| %>
    <%= builder.label "Create new contact" %>
      <fieldset>
        <%= builder.label "First name" %>
        <%= builder.text_field :first_name %>
        <%= builder.label "Last name" %>
        <%= builder.text_field :last_name %>
        <%= builder.label "Email" %>
        <%= builder.text_field :email %>
        <%= builder.label "Phone" %>
        <%= builder.text_field :phone %>
        <%= builder.hidden_field :user_id, :value => current_user.id %>
        
      </fieldset>
    <% end %>

  <%= f.submit "Create IOU" %>  
<% end %>